<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/chooseTitleTextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Choose a number of dices"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>
    <RadioGroup
        android:id="@+id/chooseRadioGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chooseTitleTextView"
        android:layout_marginBottom="5dp">
        <RadioButton
            android:id="@+id/dice1RadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 dice"/>
        <RadioButton
            android:id="@+id/dice2RadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 dices"/>
        <RadioButton
            android:id="@+id/dice3RadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 dices"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chooseRadioGroup">
        <Button
            android:id="@+id/setBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Set"
            />
    </LinearLayout>
</RelativeLayout>